<Page x:Class="UchebPr.PageProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchebPr"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="920"
      Title="PageProfile">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Фамилия" Margin="10,10,10,0" FontFamily="Bahnschrift" FontSize="14"></Label>
            <TextBox x:Name="TBSurname" Width="180" Height="35" Margin="10,0" HorizontalAlignment="Left"></TextBox>
            <Label Content="Имя" Margin="10,10,10,0" FontFamily="Bahnschrift" FontSize="14"></Label>
            <TextBox x:Name="TBName" Width="180" Height="35"  Margin="10,0" HorizontalAlignment="Left"></TextBox>
            <Button x:Name="BtnSave" Content="Сохранить изменения" HorizontalAlignment="Center" Margin="30" Grid.Row="1" VerticalAlignment="Top" Height="28" Width="154" Click="BtnSave_Click" />
            
        </StackPanel>
    </Grid>
</Page>
